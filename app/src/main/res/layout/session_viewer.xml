<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Título grande -->
    <TextView
        android:id="@+id/big_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rutina"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"/>

    <!-- Descripción -->
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción de la rutina"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/big_title"
        android:layout_marginBottom="16dp"/>

    <!-- Duración del Descanso -->
    <TextView
        android:id="@+id/text_rest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duración del Descanso:"
        android:textSize="16sp"
        android:layout_below="@id/description"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/edit_rest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_rest"
        android:hint="Ejemplo: 2 minutos"
        android:padding="8dp"
        android:textSize="14sp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"/>

    <!-- Primer Título de Tabla -->
    <TextView
        android:id="@+id/table_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pull"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_below="@id/edit_rest"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <!-- Primera Tabla -->
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/table_title1"
        android:layout_marginBottom="16dp">

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <!-- Fila de Cabecera -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purple"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Series"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reps"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Peso"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />
            </TableRow>

            <!-- Fila de Datos 1 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ejercicio 1"
                    android:gravity="center"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3"
                    android:gravity="center"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12"
                    android:gravity="center"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="15kg"
                    android:gravity="center"
                    android:textColor="@android:color/black" />
            </TableRow>

            <!-- Fila de Datos 2 -->
